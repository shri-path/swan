{
  "manifest_version": 3,
  "name": "Swagger Navigator",
  "version": "1.0.0",
  "description": "Enhanced navigation for large OpenAPI specifications with starred routes, search, and sticky sidebar",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/storage.js",
        "scripts/dom-parser.js",
        "scripts/sidebar-ui.js",
        "scripts/mutation-handler.js",
        "scripts/content-script.js"
      ],
      "css": ["styles/sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}